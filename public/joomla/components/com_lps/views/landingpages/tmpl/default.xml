<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="LPs - Landing Page" option="View">
        <message>
            Display a Landing Page on the front-end of your site.
        </message>
	</layout>
	<!-- Add fields to the request variables for the layout. -->
	<fields name="request">
		<fieldset name="request">

			<field name="id" type="sql" default="" label="Landing Page" description="Select landing page" query="SELECT id, name from #__lps_landing_pages" key_field="id" value_field="name"/>
			
		</fieldset>
	</fields>	
</metadata>
